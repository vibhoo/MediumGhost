<!DOCTYPE html>
<html>
<head>
  <title>Medium Ghost | Stylopa's Blog</title>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:300,900", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "bootstrap-wysihtml5", "data-turbolinks-track" => true%>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag params[:controller], "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "advanced", "wysihtml5-0.3.0.min", "bootstrap-wysihtml5", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |type, message|%>

    <p class="alert <%= flash_class type %>">
      <button class="close" data-dismiss="alert">x</button>
      <%= message %>
    </p>

<% end %>

<nav class=" navbar navbar-absolute-top" role="navigation">
  <div class="container">


    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
          <li><%= link_to "Home", home_path %></li>
          <li><%= link_to current_user.first_name, edit_user_registration_path %></li>
          <li><%= link_to "SignOut",  signout_path %></li>
      <% else %>
           <li><%= link_to "Register", register_path %></li>
          <li><%= link_to "SignIn", signin_path %></li>
      <% end %>
    </ul>

  </div>
</nav>
<div class="row">
  <%= yield %>
</div>


</body>
</html>
