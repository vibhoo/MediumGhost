

<div class="row centralize">


  <%= simple_form_for(resource, :as => resource_name, html: {class: "well well-lg col-md-4 col-md-offset-4"}, :url => session_path(resource_name)) do |f| %>

      <fieldset>

        <legend>
          <h2>SignIn</h2>
        </legend>

        <div class="form-group">
          <%= f.input :email, input_html: {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.input :password, label: "Password", input_html: {class: "form-control"} %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.input :remember_me, as: :boolean, label: false, inline_label: "Remember Me" %>
            </div>
        <% end -%>

        <div><%= f.submit "SignIn", class: "btn btn-lg btn-success pull-right" %></div>
  <% end %>

  </fieldset>

  <div class="col-md-4 col-md-offset-4">
    <%= render "devise/shared/links" %>
  </div>

</div>

<%= render "posts/return_button" %>