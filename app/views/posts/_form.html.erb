
<div class="row centralize">
  <div class="col-md-6 col-md-offset-3 well well-lg">

    <%= simple_form_for(@post, html: {class:"form-horizontal", multipart: true}) do |f| %>
        <% if @post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

              <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="page-header"><h2><%= @titulo %></h2></div>

        <div class="form-group">
        <%= f.input :avatar, as: :file, label: "Image", input_html: {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.input :title, label: "Title", input_html: {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= f.input :location, label: "Location", input_html: {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= f.input :tags, label: "Tags", input_html: {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= f.input :content, label: false, as: :text, placeholder: "Start Writing", input_html: {id: "wysihtml5-textarea", class:"form-control", rows:10} %>
        </div>

        <div class="form-group">
          <%= f.submit "Create post", class: "btn btn-success btn-lg pull-right" %>
        </div>


    <% end %>


  </div>
</div>